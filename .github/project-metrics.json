  "alerts": {
    "description": "Alert configurations for metric thresholds",
    "configurations": [
      {
        "name": "test_coverage_low",
        "condition": "test_coverage < 85",
        "severity": "warning",
        "notification_channels": ["slack", "email"]
      },
      {
        "name": "security_vulnerabilities",
        "condition": "critical_vulnerabilities > 0 OR high_vulnerabilities > 0",
        "severity": "critical",
        "notification_channels": ["slack", "email", "pagerduty"]
      },
      {
        "name": "carbon_budget_exceeded",
        "condition": "monthly_carbon_usage > monthly_carbon_budget",
        "severity": "warning",
        "notification_channels": ["slack", "sustainability_team"]
      },
      {
        "name": "build_failure_rate_high",
        "condition": "build_success_rate < 90",
        "severity": "warning",
        "notification_channels": ["slack", "engineering_team"]
      },
      {
        "name": "performance_degradation",
        "condition": "callback_overhead > 3 OR memory_usage > 150",
        "severity": "warning",
        "notification_channels": ["slack", "performance_team"]
      }
    ]
  },
  "reporting": {
    "description": "Reporting configuration and schedules",
    "schedules": {
      "daily": {
        "metrics": ["security", "performance", "development"],
        "recipients": ["engineering_team"],
        "format": "summary"
      },
      "weekly": {
        "metrics": ["code_quality", "sustainability", "adoption"],
        "recipients": ["engineering_team", "management"],
        "format": "detailed"
      },
      "monthly": {
        "metrics": ["all"],
        "recipients": ["all_stakeholders"],
        "format": "executive_summary"
      }
    },
    "dashboards": {
      "engineering": {
        "url": "https://grafana.terragonlabs.com/d/hf-eco2ai-engineering",
        "metrics": ["code_quality", "security", "performance", "development"]
      },
      "sustainability": {
        "url": "https://grafana.terragonlabs.com/d/hf-eco2ai-sustainability",
        "metrics": ["sustainability"]
      },
      "business": {
        "url": "https://grafana.terragonlabs.com/d/hf-eco2ai-business",
        "metrics": ["adoption"]
      }
    }
  },
  "automation": {
    "description": "Automated actions based on metrics",
    "rules": [
      {
        "name": "auto_dependency_update",
        "trigger": "dependency_age > 30 AND security_vulnerabilities == 0",
        "action": "create_dependency_update_pr",
        "frequency": "weekly"
      },
      {
        "name": "auto_performance_optimization",
        "trigger": "callback_overhead > 2.5",
        "action": "create_performance_issue",
        "frequency": "immediate"
      },
      {
        "name": "auto_security_scan",
        "trigger": "last_security_scan > 24h",
        "action": "trigger_security_workflow",
        "frequency": "daily"
      },
      {
        "name": "auto_carbon_report",
        "trigger": "monthly_carbon_usage > 80% of budget",
        "action": "generate_carbon_optimization_report",
        "frequency": "weekly"
      }
    ]
  },
  "integrations": {
    "description": "External integrations for metrics collection",
    "services": {
      "github": {
        "api_endpoints": [
          "https://api.github.com/repos/terragonlabs/hf-eco2ai-plugin",
          "https://api.github.com/repos/terragonlabs/hf-eco2ai-plugin/actions/runs"
        ],
        "metrics_collected": ["stars", "forks", "issues", "pull_requests", "build_status"]
      },
      "pypi": {
        "api_endpoints": [
          "https://pypistats.org/api/packages/hf-eco2ai-plugin/recent"
        ],
        "metrics_collected": ["downloads", "version_adoption"]
      },
      "codecov": {
        "api_endpoints": [
          "https://codecov.io/api/v2/github/terragonlabs/hf-eco2ai-plugin"
        ],
        "metrics_collected": ["test_coverage", "coverage_trend"]
      },
      "prometheus": {
        "endpoints": [
          "http://prometheus:9090/api/v1/query"
        ],
        "metrics_collected": ["performance", "sustainability", "system_health"]
      }
    }
  },
